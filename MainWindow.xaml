<Window x:Class="chooselesson.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:chooselesson"
        mc:Ignorable="d"
        Title="2023選課系統" Height="650" Width="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="500*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="500*"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="500*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Horizontal" Background="#FFECD6D6" Grid.ColumnSpan="3">
            <Label Content="學生" VerticalAlignment="Center" FontSize="16" Margin="100,0,0,0" FontWeight="Bold" />
            <ComboBox x:Name="cmbStudent" Width="200" Height="35" Margin="20,0,0,0" VerticalAlignment="Center" FontSize="14" FontWeight="Bold" SelectionChanged="cmbStudent_SelectionChanged"/>
        </StackPanel>
        <TabControl Grid.Row="1" Background="Aqua">
            <TabItem Header="以教師分類的課程">
                <TreeView x:Name="tvTeacher" ItemsSource="{Binding teachers}">
                    <TreeView.Resources>
                        <!-- 教師節點的樣式 -->
                        <HierarchicalDataTemplate DataType="{x:Type local:Teacher}" ItemsSource="{Binding TeachingCourses}">
                            <TextBlock Text="{Binding TeacherName}" FontWeight="Bold"/>
                        </HierarchicalDataTemplate>

                        <!-- 課程節點的樣式 -->
                        <DataTemplate DataType="{x:Type local:Course}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding CourseName}" />
                                <TextBlock Text=" (" Foreground="Black"/>
                                <TextBlock Text="{Binding Type}" Foreground="Red"/>
                                <TextBlock Text=")" Foreground="Blue"/>
                            </StackPanel>
                        </DataTemplate>
                    </TreeView.Resources>
                </TreeView>
            </TabItem>
            <TabItem Header="所有課程">
                <ListBox Background="#FF6AB0D4"/>
            </TabItem>
        </TabControl>
        <StackPanel Grid.Row="1" Grid.Column="1">
            <Button x:Name="btnRegister" Content="選課" Width="80" Height="50" VerticalAlignment="Center" Margin="0,100,0,0" FontSize="14" FontWeight="Bold"/>
            <Button x:Name="btnWithdrawl" Content="退選" Width="80" Height="50" VerticalAlignment="Center" Margin="0,20,0,0" FontSize="14" FontWeight="Bold"/>
            <Button x:Name="btnSave" Content="儲存紀錄" Width="80" Height="50" VerticalAlignment="Center" Margin="0,20,0,0" FontSize="14" FontWeight="Bold"/>
        </StackPanel>
        <ListView Grid.Row="1" Grid.Column="2" Background="#FFC56DDA"/>
        <StatusBar Grid.Row="2" Grid.ColumnSpan="3">
            <Label x:Name="labelStatus" Content="狀態列" Width="300" Height="30" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="100,0,0,0"/>
        </StatusBar>
    </Grid>
</Window>
